{% extends 'base.html.twig' %}

{% block title %}Hello bookController!{% endblock %}

{% block body %}



  
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Ajouter un livre</h5>
                        <form action="{{ path('add_book') }}" method="post">
                            <div class="mb-3">
                                <label for="author" class="form-label">Auteur</label>
                                <select class="form-control" id="author" name="author_id">
                                    {% for author in authors %}
                                        <option value="{{ author.id }}">{{ author.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="name" class="form-label">Nom du Livre</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Entrer le nom du livre" autocomplete="off">
                            </div>
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary" name="save" value="submit">Ajouter</button>
                                <a class="btn btn-success text-center" href="{{ path('list_author') }}">Annuler</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
   


{% endblock %}
