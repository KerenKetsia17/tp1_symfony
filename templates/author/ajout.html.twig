{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}


    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Ajouter un auteur</h5>

                        <form action="{{path('add_author')}}" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Entrer le nom complet"  autocomplete="off">
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary" name="enregistrer" value="submit">ajouter</button>
                                <a class="btn btn-success text-center" href="{{ path('list_author') }}">Annuler</a>
                                
                            </div>
                            
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    
        
   


{% endblock %}
