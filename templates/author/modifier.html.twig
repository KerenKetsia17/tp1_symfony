{% extends 'base.html.twig' %}

{% block title %}Modifier un auteur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Modifier l'auteur</h5>

                        <form action="{{ path('update_author', {'id': author.id}) }}" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Entrer le nom complet" autocomplete="off" value="{{ author.name }}">
                            </div>

                            <div class="mb-3">
                                <h6>Livres de {{ author.name }}</h6>
                                <ul>
                                    {% for book in author.books %}
                                        <li>{{ book.title }}</li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <!-- Formulaire pour ajouter un nouveau livre -->
                            <div class="mb-3">
                                <label for="newBook" class="form-label">Ajouter un nouveau livre</label>
                                <input type="text" class="form-control" id="newBook" name="newBook" placeholder="Titre du nouveau livre">
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary" name="modifier" value="submit">Modifier</button>
                                <a href="{{ path('list_author') }}" class="btn btn-danger">Annuler</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
